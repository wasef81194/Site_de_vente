{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="container-fluid connexion">
        <div class="card card-connexion position-absolute top-50 start-50 translate-middle shadow-lg p-3 mb-5 rounded">

            <form method="post">
                <h2 class="h3 mb-3 font-weight-normal">Connexion</h2>
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }} Réessayer.</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        Tu es déja connecter en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                    </div>
                {% endif %}
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                <label for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}
                <div class="d-grid gap-2 col-6 mx-auto mt-4">
                    <button class="btn btn-send mt-4 mb-4" type="submit"> Envoyer </button>
                </div>
                <p> Vous n'avez pas encore de compte <a href="{{ path('app_user_new') }}"> inscrivez-vous </a> </p>
                
            </form>
        </div>
    </div>

{% endblock %}
