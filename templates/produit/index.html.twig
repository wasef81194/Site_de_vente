{% extends 'base.html.twig' %}

{% block javascript %}
{% endblock %}
{% block body %}
    <div class="container">
        <h1 class="title-home">Produits disponible</h1>
            <div class="row row-cols-1 row-cols-md-4 g-4">
            {% for produit in produits %}
                <div class="col">
                    <div class="card" href="{{ path('produit_show', {'id': produit.id}) }}" data-show-card>
                        {% for image in produit.images %}
                            {% if loop.index  == 1 %}
                                <img class="card-img-top" src="{{ asset('/uploads/' ~ image.nom) }}" alt="Image du produit" width="10%">
                            {% endif %}
                        {% else %}
                            <img class="card-img-top" src="{{ asset('/images/produit/no_image.jpg') }}" alt="Image non disponible" width="10%">
                        {% endfor %}
                        <div class="card-body">
                            <h5 class="card-title">{{ produit.nom }}</h5>
                            <p class="card-text">{{ produit.description }}</p>
                            <p class="card-text">{{ produit.prix }} â‚¬ </p>
                            <a href="#" class="btn btn-primary">Commander</a>
                            <!-- <a href="{{ path('produit_show', {'id': produit.id}) }}" class="btn btn-primary" >show</a> -->
                            <a href="{{ path('produit_edit', {'id': produit.id}) }}" ><img class="float-start" src="{{ asset('/images/icons/edit.svg') }}" alt="Modifier"></a>
                        </div>
                    </div>
                </div>
               
            {% endfor %}
            </div>
        <a class="btn btn-primary float-end" href="{{ path('produit_new') }}">Create new</a>
    </div>
{% endblock %}
